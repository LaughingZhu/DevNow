{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": "src",
    "types": ["astro/client"],
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@data/*": ["data/*"],
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"],
      "@common/*": ["common/*"],
      "@config/*": ["config/*"],
      "@type/*": ["type/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*" // 此处示例表示包含src目录下的所有文件
  ],
  "exclude": ["dist"]
}
