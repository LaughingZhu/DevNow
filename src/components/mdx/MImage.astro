---
type MD_TYPE = {
  src: string;
  alt: string;
  loading: 'lazy' | 'eager';
};
const props = Astro.props as MD_TYPE;

import { Picture } from 'astro:assets';
import cx from 'clsx';
---

{
  props ? (
    <Picture
      {...props}
      src={props.src}
      sizes='(max-width: 640px) 90vw, 480px'
      inferSize
      decoding={'async'}
      class={cx('rounded-md mx-auto')}
      data-img-embed
    />
  ) : null
}
